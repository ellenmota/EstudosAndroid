<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.numerosaletorios.ellenmota.numeroaleatorios.MainActivity">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="31dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="@string/titulo"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnJogar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgNumbers" />

    <Button
        android:id="@+id/btnJogar"
        toolslayout_editor_absoluteX="35dp"
        android:layout_width="317dp"
        android:layout_height="66dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="33dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="28dp"
        android:text="@string/botao"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/txtResultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="314dp"
        android:layout_height="56dp"
        android:layout_marginBottom="83dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="14dp"
        android:padding="15sp"
        android:text="Nenhum resultado..."
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnJogar" />

    <ImageView
        android:id="@+id/imgNumbers"
        android:layout_width="166dp"
        android:layout_height="157dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="98dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toTopOf="@+id/txtTitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/numbers" />

</android.support.constraint.ConstraintLayout>
