<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="qualcombustivel.ellenmota.com.qualcombustivel.MainActivity">

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:layout_marginBottom="84dp"
        android:layout_marginEnd="29dp"
        android:layout_marginStart="29dp"
        android:text="Nenhum resultado..."
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtAlcool"
        android:layout_width="137dp"
        android:layout_height="56dp"
        android:layout_marginBottom="128dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="129dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/txtResultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtGasolina"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <EditText
        android:id="@+id/txtGasolina"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/txtAlcool"
        app:layout_constraintEnd_toStartOf="@+id/txtAlcool"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:text="Alcool"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txtAlcool"
        app:layout_constraintStart_toStartOf="@+id/txtAlcool" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginBottom="39dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:text="Digita os valores de cada combustivel abaixo:"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="129dp"
        android:text="Gasolina"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/txtGasolina"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDescobrir"
        android:layout_width="148dp"
        android:layout_height="59dp"
        android:layout_marginTop="22dp"
        android:text="Descobrir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGasolina" />
</android.support.constraint.ConstraintLayout>
